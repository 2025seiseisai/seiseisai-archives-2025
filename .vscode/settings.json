{
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.tabSize": 4,
    "biome.lsp.bin": "node_modules/.bin/biome",
    "prettier.enable": false,
    "eslint.enable": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.biome": "explicit"
    },
    "files.associations": {
        "bun.lock": "jsonl"
    },
    "files.eol": "\n"
}
